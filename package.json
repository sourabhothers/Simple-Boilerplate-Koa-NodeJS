{
  "name": "simple-boilerplate",
  "version": "0.0.1",
  "description": "Basic boilerplate with Mongoose, Koa, @koa/router, Winston, dotenv, mocha, nodemon, husky, ejs",
  "main": "dist/backend/index.js",
  "scripts": {
    "prepare": "npm run tsc:backend && husky install",
    "start": "NODE_ENV=prod node --enable-source-maps ./dist/backend/index.js",
    "dev": "nodemon --enable-source-maps ./dist/backend/index.js",
    "tsc:backend": "tsc --project ./backend/tsconfig.json && npm run copy-views",
    "tsc:backend:w": "tsc -w --project ./backend/tsconfig.json",
    "test": "mocha -t 5000 --require source-map-support/register ./dist/**/*.test.js",
    "test:w": "mocha --watch -t 5000 --require source-map-support/register ./dist/**/*.test.js",
    "copy-views": "cp -r ./backend/views ./dist/backend",
    "prettier:format": "prettier --config .prettierrc 'backend/**/*.ts' --write",
    "eslint": "eslint 'backend/**/*.ts'",
    "eslint:fix": "eslint --fix 'backend/**/*.ts'",
    "format": "npm run prettier:format"
  },
  "author": "Saurabh",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@types/koa-ejs": "^4.2.4",
    "ajv": "^8.6.2",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-ejs": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-json-error": "^3.1.2",
    "mongoose": "^6.0.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.8",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa-json-error": "^3.1.3",
    "@types/koa-views": "^7.0.0",
    "@types/mocha": "^9.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.7.13",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "husky": "^7.0.0",
    "husky-init": "^7.0.0",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.0",
    "source-map-support": "^0.5.20",
    "typescript": "^4.4.3"
  }
}
